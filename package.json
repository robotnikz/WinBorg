{
  "name": "winborg-manager",
  "productName": "WinBorg Manager",
  "version": "1.8.2",
  "description": "A Windows 11-styled interface for managing BorgBackup repositories via WSL.",
  "author": "robotnikz",
  "repository": {
    "type": "git",
    "url": "https://github.com/robotnikz/WinBorg"
  },
  "main": "electron-main.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "electron": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:dev": "node scripts/dev-electron.mjs",
    "dist": "tsc && vite build && electron-builder",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:pr": "npm run typecheck && npm run test:coverage && npm run test:e2e:smoke",
    "test:e2e": "cross-env NODE_ENV=test NODE_OPTIONS=--disable-warning=DEP0190 playwright test --grep-invert @manual",
    "test:e2e:smoke": "cross-env NODE_ENV=test NODE_OPTIONS=--disable-warning=DEP0190 playwright test --grep @smoke --grep-invert @manual",
    "test:e2e:manual": "cross-env NODE_ENV=test NODE_OPTIONS=--disable-warning=DEP0190 playwright test --grep @manual",
    "test:e2e:full": "cross-env NODE_ENV=test NODE_OPTIONS=--disable-warning=DEP0190 playwright test --grep-invert @manual",
    "pretest:e2e": "npm run build",
    "pretest:e2e:smoke": "npm run build",
    "pretest:e2e:manual": "npm run build",
    "pretest:e2e:full": "npm run build"
    ,
    "screenshots": "cross-env NODE_ENV=test NODE_OPTIONS=--disable-warning=DEP0190 playwright test --grep @screenshots"
  },
  "build": {
    "appId": "com.winborg.manager",
    "productName": "WinBorg Manager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "main/**/*",
      "wsl-helper.js",
      "package.json"
    ],
    "win": {
      "icon": "public/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "artifactName": "WinBorg.Manager.Setup.${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "portable": {
      "artifactName": "WinBorg.Manager.Portable.${version}.${ext}"
    }
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "jsdom": "^27.4.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.2.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "undici": "6.23.0",
    "diff": "8.0.3"
  }
}
